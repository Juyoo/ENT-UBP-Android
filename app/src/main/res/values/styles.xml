<resources>
    <!--Base Material Design -->
    <style name="UbpTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- default value for colorControlActivated which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- You can also set colorControlNormal, colorControlActivated
            colorControlHighlight and colorSwitchThumbNormal. -->
    </style>
    <style name="UbpTheme" parent="UbpTheme.Base">
    </style>

    <!-- Theme pour l arborescence de la pop des formations, UE et Cours -->
    <style name="arbo_theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#5fa3d0</item>
    </style>

    <!-- Style pour agenda -->
    <style name="agenda_text_content">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/agenda_text_content</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Theme pour profil-->
    <style name="profile_Style">
        <item name="android:background">#626262</item>
        <item name="android:textColor">#fff</item>
        <item name="android:progressDrawable">@drawable/progress_bg</item>
    </style>

</resources>
