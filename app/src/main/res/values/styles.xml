<resources>
    <!-- Base application theme. -->
    <style name="UbpTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/UbpTheme.ActionBarStyle</item>
    </style>

    <style name="UbpTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/UbpTheme.ActionBarStyle.TitleTextStyle</item>
        <item name="android:background">@color/action_bar_background</item>
    </style>

    <style name="UbpTheme.ActionBarStyle.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/action_bar_title</item>
    </style>

    <!-- Theme pour l arborescence de la pop des formations, UE et Cours -->
    <style name="arbo_theme" parent="Theme.AppCompat.Light.Dialog">
    </style>

    <!-- Style pour agenda -->
    <style name="agenda_text_content">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/agenda_text_content</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Theme pour profil-->
    <style name="profile_Style">
        <item name="android:background">@color/counter_text_bg</item>
        <item name="android:textColor">@color/list_item_title</item>
        <item name="android:progressDrawable">@drawable/progress_bg</item>
    </style>



    <!-- Theme pour titre-->
    <style name="title_Style">
        <item name="android:background">@color/list_divider</item>
        <item name="android:textColor">@color/list_item_title</item>
    </style>

</resources>
