<resources>
    <!-- Base application theme. -->
    <style name="UbpTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/UbpTheme.ActionBarStyle</item>
    </style>

    <style name="UbpTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/UbpTheme.ActionBarStyle.TitleTextStyle</item>
        <item name="android:background">@color/action_bar_background</item>
    </style>

    <style name="UbpTheme.ActionBarStyle.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/action_bar_title</item>
    </style>

</resources>
