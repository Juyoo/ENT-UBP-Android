<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/classroom_add_linearLayout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:layout_weight="1"
                tools:context="com.ent_ubp_android.app.fragment.classroom.ClassroomAddFragment">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView android:id="@+id/classroom_add_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Ajout d'une nouvelle salle de cours"
                      android:padding="20dp"
                      android:textSize="20sp"
                      android:gravity="center"
                      android:textStyle="bold"
                      android:textColor="?attr/colorPrimaryDark"
                      android:layout_alignParentTop="true"/>


            <TextView android:id="@+id/classroom_add_salle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Nom de la salle"
                      android:padding="15dp"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:textColor="?attr/colorPrimaryDark"
                      android:layout_below="@+id/classroom_add_title"/>

            <EditText android:id="@+id/classroom_add_edit_salle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:hint="Nom de la salle"
                      android:padding="15dp"
                      android:gravity="center"
                      android:singleLine="true"
                      android:textStyle="bold"
                      android:textSize="15sp"
                      android:textColor="?attr/colorPrimaryDark"
                      android:layout_below="@+id/classroom_add_title"
                      android:layout_toRightOf="@+id/classroom_add_salle"
                      android:layout_alignParentRight="true"/>

            <TextView android:id="@+id/classroom_add_capa"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Capacité"
                      android:paddingTop="15dp"
                      android:paddingRight="37dp"
                      android:paddingBottom="15dp"
                      android:paddingLeft="36dp"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:textColor="?attr/colorPrimaryDark"
                      android:layout_below="@+id/classroom_add_salle"/>

            <EditText android:id="@+id/classroom_add_edit_capa"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:hint="Capacité"
                      android:inputType="number"
                      android:singleLine="true"
                      android:padding="15dp"
                      android:gravity="center"
                      android:textStyle="bold"
                      android:textSize="15sp"
                      android:textColor="?attr/colorPrimaryDark"
                      android:layout_below="@+id/classroom_add_edit_salle"
                      android:layout_toRightOf="@+id/classroom_add_capa"
                      android:layout_alignParentRight="true"/>

            <TextView android:id="@+id/classroom_add_type"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Type"
                      android:paddingTop="15dp"
                      android:paddingRight="50dp"
                      android:paddingBottom="15dp"
                      android:paddingLeft="50dp"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:textColor="?attr/colorPrimaryDark"
                      android:layout_below="@+id/classroom_add_capa"/>

            <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/checkbox_cm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CM"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                    app:buttonTint="@color/checked"
                    android:paddingTop="15dp"
                    android:paddingRight="37dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/classroom_add_type"
                    android:layout_below="@+id/classroom_add_edit_capa"/>

            <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/checkbox_tp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TP"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                    app:buttonTint="@color/checked"
                    android:paddingTop="15dp"
                    android:paddingRight="37dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/classroom_add_type"
                    android:layout_below="@+id/checkbox_cm"/>

            <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/checkbox_td"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TD"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                    app:buttonTint="@color/checked"
                    android:paddingTop="15dp"
                    android:paddingRight="37dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/classroom_add_type"
                    android:layout_below="@+id/checkbox_tp"/>

            <TextView android:id="@+id/classroom_add_equipment"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Ajout d'équipment"
                      android:paddingTop="30dp"
                      android:paddingRight="30dp"
                      android:paddingBottom="15dp"
                      android:paddingLeft="30dp"
                      android:textSize="18sp"
                      android:textStyle="bold"
                      android:textColor="?attr/colorPrimaryDark"
                      android:layout_centerInParent="true"
                      android:layout_below="@+id/checkbox_td"/>

            <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/checkbox_equipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ordinateur"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                    app:buttonTint="@color/checked"
                    android:paddingTop="15dp"
                    android:paddingRight="37dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="36dp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/classroom_add_equipment"/>

            <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/checkbox_equipment2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rétroprojecteur"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                    app:buttonTint="@color/checked"
                    android:paddingTop="15dp"
                    android:paddingRight="37dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="36dp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/checkbox_equipment"/>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>